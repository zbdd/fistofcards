// Simple setup.
x = view_xview[0];
y = view_yview[0];
w = view_wview[0];
h = view_hview[0];

// Main HUD background.
draw_set_font(fn_system);

draw_set_color(c_gray);
draw_rectangle(x,y,x + w,y + h/4,false);

// DONT LOOK AT ME! IM HORRIBLE DEBUGGING.
// TODO XXX REMOVE
draw_set_color(c_red);
draw_text(x, h/2, "In Hand: ");
draw_text(x + 90,h/2, s_count_state("hand", pool));

draw_text(x, h/2 + 30, "In Deck: ");
draw_text(x + 90,h/2 + 30, s_count_state("deck", pool));

draw_text(x, h/2 + 60, "Discard: ");
draw_text(x + 90,h/2 + 60, s_count_state("discard", pool));

index = 0;

// Draw the actual cards.
for (i = 0; i &lt; ds_list_size(pool); i++) {
    if (pool[| i].state == 'hand') {
        pool[| i].x = x + (w / 16 * (index * 4 + 1));
        pool[| i].y = y + (h / 24 * 1);
        index++;
    }
}

// Draw selected cards.
for (i = 0; i &lt; ds_grid_width(chains); i++) {
    for (j = 0; j &lt; ds_grid_height(chains); j++) {
        if (i == addx &amp;&amp; j == addy) {
            select.x = (x + move_by) + (1 * (i * move_by));
            select.y = (h - move_by) - (1 * (j * move_by));
        }
        if (chains[# i, j] != 0) {
            todraw = chains[# i, j];
            with (todraw) {
                depth = 1 * -y;
                x = (o_conduit.x + o_conduit.move_by) + (1 * (o_conduit.i * o_conduit.move_by));
                y = (o_conduit.h - o_conduit.move_by) - (1 * (o_conduit.j * o_conduit.move_by));
            }
            drawn++;
        }
    }
}

</string>
